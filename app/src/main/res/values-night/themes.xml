<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MessageGate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/surface_background</item>
        <item name="materialCardViewStyle">@style/Widget.MessageGate.Card</item>
        <item name="tabStyle">@style/Widget.MessageGate.TabLayout</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.MessageGate.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="Widget.MessageGate.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/purple_200</item>
    </style>

    <style name="HomeCardLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">#FFAFC2D6</item>
    </style>

    <style name="HomeCardValue" parent="Widget.AppCompat.TextView">
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FFE9F1FA</item>
    </style>
</resources>
